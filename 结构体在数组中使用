using System;
class Program
{
    struct Monster
    {
        public string name;
        public int atk;
        public Monster(string name,int atk)
        {
            this.name = name;
            this.atk = atk;
        }
    }
    static void Main(string[] args)
    {
        Monster[] arr = new Monster[10];//这道题的关键在于创建了一个数据类型是你自定义的数组
        Random r = new Random();
        for(int i = 0; i < arr.Length; i++)
        {
            int Matk = r.Next(3, 9);
            string Mname = "怪物";
            arr[i] = new Monster($"怪物{i}",Matk);//以及这种储存方式需要学习
            Console.WriteLine(arr[i].name+' '+"攻击力是："+arr[i].atk);//还有注意调用方式
        }
    }
}
